<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4581B3"
        android:backgroundTint="#4581B3"
        tools:context=".addproduct">

        <!-- JUDUL -->
        <TextView
            android:id="@+id/labelJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Produk"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- LABEL NAMA -->
        <TextView
            android:id="@+id/labelNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/labelJudul"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama produk"
            android:background="@drawable/edit_text_border"
            android:padding="12dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/labelNama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- HARGA -->
        <TextView
            android:id="@+id/labelHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Produk"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etNama"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Masukkan harga"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_border"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelHarga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- STOK -->
        <TextView
            android:id="@+id/labelStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok Produk"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etHarga"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etStok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Jumlah stok"
            android:inputType="number"
            android:background="@drawable/edit_text_border"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelStok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- FOTO -->
        <TextView
            android:id="@+id/labelFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Produk"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etStok"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelFoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnPilihFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih File"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/imagePreview"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- DESKRIPSI -->
        <TextView
            android:id="@+id/labelDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Produk"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnPilihFile"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etIsi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tulis deskripsi produk"
            android:minLines="4"
            android:gravity="top|start"
            android:background="@drawable/edit_text_border"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelDeskripsi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BUTTONS -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#B0BEC5"
            app:layout_constraintTop_toBottomOf="@id/etIsi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSimpan"
            app:layout_constraintWidth_percent="0.48" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/etIsi"
            app:layout_constraintStart_toEndOf="@id/btnClose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
